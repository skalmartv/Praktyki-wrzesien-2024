@model KontaktViewModel

<h2>Formularz Kontaktowy</h2>

<form asp-action="" method="post">
    <div>
        <label for="Name">Imię:</label>
        <input type="text" id="Imie" name="Imie" value="@Model.Imie" required />
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div>
        <label for="Wiadomosc">Wiadomość:</label>
        <textarea id="Wiadomosc" name="Wiadomosc" required>@Model.Wiadomosc</textarea>
    </div>
    <div>
        <button type="submit">Wyślij</button>
    </div>
</form>