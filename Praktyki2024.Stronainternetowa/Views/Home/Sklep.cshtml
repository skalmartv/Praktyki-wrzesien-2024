@model SklepViewModel

<h2>Formularz Zamówienia</h2>

<form asp-action="" method="post">
    <div>
        <label for="Imie">Imię:</label>
        <input type="text" id="Imie" name="Imie" value="@Model.Imie1" required />
    </div>
    <div>
        <label for="LastName">Nazwisko:</label>
        <input type="text" id="Nazwisko" name="Nazwisko" value="@Model.Nazwisko" required />
    </div>
    <div>
        <label for="Address">Adres:</label>
        <input type="text" id="Adres" name="Adres" value="@Model.Adres" required />
    </div>
    <div>
        <label for="Telefon">Telefon:</label>
        <input type="tel" id="NumerTelefonu" name="NumerTelefonu" value="@Model.NumerTelefonu" required />
    </div>
    <div>
        <label for="Produkt">Produkt:</label>
        <select id="Produkt" name="Produkt" required>
            <option value="">-- Wybierz produkt --</option>
            <option value="Produkt1">Produkt 1</option>
            <option value="Produkt2">Produkt 2</option>
            <option value="Produkt3">Produkt 3</option>
        </select>
    </div>
    <div>
        <button type="submit">Złóż zamówienie</button>
    </div>
</form>